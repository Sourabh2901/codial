<header>
    <div id = "header-logo">
        <h1>Codeial</h1>
    </div>

    <div id = "header-right-part">
        <ul>
            <% if(locals.user){ %> 
                <div>
                    <li>
                        <a href = "/users/profile"><%= user.name %></a>
                    </li>
                </div>
                <div>
                    <li>
                        <a href="/users/sign-out">Sign Out</a>
                    </li>
                </div>
            <%} else { %> 
                <div>
                    <li>
                        <a href="/users/sign-in">Sign In</a>
                    </li>
                </div>
                <div>
                    <li>
                        <a href="/users/sign-up">Sign Up</a>
                    </li>
                </div>
            <% } %>
        </ul>
    </div>
   
</header>